<Window x:Name="appMainWindow" x:Class="AppToAddNewSqlProcedure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppToAddNewSqlProcedure"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Manage Procedure" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FFCE5151" Offset="1"/>
            <GradientStop Color="#FF933A3A" Offset="0.113"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="419*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="7">
            <TabControl.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF690D0D" Offset="0.122"/>
                    <GradientStop Color="#FFE62C2C" Offset="1"/>
                    <GradientStop Color="#FFB33333" Offset="0.47"/>
                </LinearGradientBrush>
            </TabControl.Background>
            <TabItem x:Name="addTab" Header="Add" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="#FF6DCC60" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FF9FD89A">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="29*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="634*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="Name" HorizontalAlignment="Left" Margin="21,23,0,0" VerticalAlignment="Top" Width="103" Grid.ColumnSpan="4"/>
                    <Label Grid.Column="5" Content="Autor" HorizontalAlignment="Left" Margin="192,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.434,-0.035"/>
                    <Label Grid.Column="1" Content="Comment" Margin="21,113,6,0" VerticalAlignment="Top" RenderTransformOrigin="1.434,-0.035" Grid.ColumnSpan="3"/>
                    <Label x:Name="dayOfWeek" Grid.Column="5" Content="Day of Week" Margin="197,236,348,0" VerticalAlignment="Top" RenderTransformOrigin="1.434,-0.035"/>
                    <ListBox x:Name="listBoxDayOfWeek" Grid.Column="5" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="197,271,283,82" RenderTransformOrigin="0.5,0.5">
                        <ListBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ListBox.RenderTransform>
                    </ListBox>
                    <Label x:Name="labelFrequency" Grid.Column="5" Content="Frequency" Margin="197,113,363,0" VerticalAlignment="Top" RenderTransformOrigin="1.434,-0.035"/>
                    <ListBox x:Name="listBoxFrequency" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="197,145,282,208" RenderTransformOrigin="0.5,0.5" Grid.Column="5" SelectionChanged="listBoxFrequency_SelectionChanged">
                        <ListBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ListBox.RenderTransform>
                    </ListBox>
                    <TextBox x:Name="nameTextBox" Grid.Column="1" Grid.ColumnSpan="5" HorizontalAlignment="Left" Margin="25,54,0,0" TextWrapping="Wrap" Text="dbo.NameProcedure" VerticalAlignment="Top" Width="276" Height="39"/>
                    <TextBox x:Name="authorTextBox" Grid.Column="5" HorizontalAlignment="Left" Margin="197,56,0,0" TextWrapping="Wrap" Text="login" VerticalAlignment="Top" Width="276" Height="39"/>
                    <TextBox x:Name="commentTextBox" Grid.Column="1" Grid.ColumnSpan="5" HorizontalAlignment="Left" Margin="25,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="276" Height="181"/>
                    <Button x:Name="addButton" Content="Add" HorizontalAlignment="Right" Margin="0,347,10,0" VerticalAlignment="Top" Height="33" Width="105" Grid.ColumnSpan="4" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="manageTab" Header="Manage all procedures" Margin="-2,-2,-2,0">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="#FFD0BD3F" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFD2C35D">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="69*"/>
                        <ColumnDefinition Width="653*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="updateDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="7,21,79,157" Grid.Column="3" Grid.ColumnSpan="2"/>
                    <Button x:Name="updateButton" Grid.Column="3" Content="Update" HorizontalAlignment="Left" Margin="7,280,0,0" VerticalAlignment="Top" Height="33" Width="105" Grid.ColumnSpan="2"/>
                    <Button x:Name="deleteButton" Grid.Column="4" Content="Delete" HorizontalAlignment="Left" Margin="59,280,0,0" VerticalAlignment="Top" Height="33" Width="105"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
